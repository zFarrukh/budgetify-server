{
  "env": {
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },

  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": [2, "always"],
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }]
  }
}
